@using HRProDataModels.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using HRProContracts.ViewModels
@using Newtonsoft.Json
@model ResumeViewModel

@{
    ViewData["Title"] = "Резюме";
    bool userRole = APIClient.User?.Role == HRProDataModels.Enums.RoleEnum.Сотрудник || APIClient.User?.Role == HRProDataModels.Enums.RoleEnum.Администратор;
    bool isAdmin = APIClient.User?.Role == HRProDataModels.Enums.RoleEnum.Администратор;
}

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-4">
        <div class="card-header">
            <h2>@(Model.Title ?? "Нет данных")</h2>
            <input type="hidden" name="id" value="@Model.Id" />
        </div>
        <div>
            <button class="btn btn-secondary me-2" onclick="window.history.back();">Назад</button>
            <a asp-action="GetReport" asp-controller="Resume" asp-route-id="@Model.Id" class="btn btn-primary">Скачать PDF</a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Город:</dt>
                        <dd class="col-sm-8 text-muted">@(Model.City ?? "Нет данных")</dd>

                        <dt class="col-sm-4">Зарплата:</dt>
                        <dd class="col-sm-8 text-muted">@(Model.Salary ?? "Нет данных")</dd>

                        <dt class="col-sm-4">Кандидат:</dt>
                        <dd class="col-sm-8 text-muted">@(Model.CandidateInfo ?? "Нет данных")</dd>

                        <dt class="col-sm-4">Навыки:</dt>
                        <dd class="col-sm-8 text-muted">@(Model.Skills ?? "Нет данных")</dd>

                        <dt class="col-sm-4">Статус:</dt>
                        <dd class="col-sm-8 text-muted">@Model.Status</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Опыт работы:</dt>
                        <dd class="col-sm-8 text-muted">@(Model.Experience ?? "Нет данных")</dd>

                        <dt class="col-sm-4">Образование:</dt>
                        <dd class="col-sm-8 text-muted">@(Model.Education ?? "Нет данных")</dd>

                        <dt class="col-sm-4">Дата создания:</dt>
                        <dd class="col-sm-8 text-muted">@Model.CreatedAt.ToString("dd.MM.yyyy")</dd>

                        <dt class="col-sm-4">Ссылка:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Url))
                            {
                                <a href="@Model.Url" target="_blank" class="text-primary">Перейти к резюме</a>
                            }
                            else
                            {
                                <span class="text-muted">Нет данных</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="mt-3">
                <h5>Описание:</h5>
                <div class="p-3 bg-light rounded">
                    @Html.Raw(!string.IsNullOrEmpty(Model.Description) ? Model.Description : "Нет данных")
                </div>
            </div>

            @if (Model.Status == HRProDataModels.Enums.ResumeStatusEnum.Черновик && userRole)
            {
                <div class="mt-4 text-end">
                    <a asp-action="EditResume" asp-controller="Resume" asp-route-id="@Model.Id" class="btn btn-primary me-2">Редактировать</a>
                    <a asp-action="SubmitResume" asp-controller="Resume" asp-route-id="@Model.Id" class="btn btn-success">Отправить на оценку</a>
                </div>
            }

            @if (userRole)
            {
                <div class="mt-4 text-end">
                    <a asp-action="MeetingEdit" asp-controller="Meeting" asp-route-resumeId="@Model.Id" class="btn btn-primary">Назначить собеседование</a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .btn {
        background-color: #0A1128;
        color: white;
        border: none;
        border-radius: 10px;
        padding: 12px;
        font-size: 16px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn:hover {
        background-color: #1C3273;
        transform: scale(1.05);
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }
</style>