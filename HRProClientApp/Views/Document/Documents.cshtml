@using HRProContracts.ViewModels
@model List<DocumentViewModel>

@{
    ViewData["Title"] = "Мои документы";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h1 class="mb-4 text-center">Мои документы</h1>
            <div class="mb-4 text-end">
                <a asp-action="DocumentEdit" asp-controller="Document" class="btn btn-success">
                    <i class="bi bi-plus-circle me-2"></i> Добавить документ
                </a>
            </div>
            <div class="mb-4 text-end">
                <a asp-action="Templates" asp-controller="Template" class="btn btn-success">
                    <i class="bi bi-list me-2"></i> Шаблоны
                </a>
            </div>
            @if (Model != null)
            {
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Документ</th>
                                    <th>Компания</th>
                                    <th>Создатель</th>
                                    <th>Шаблон</th>
                                    <th>Статус</th>
                                    <th>Дата создания</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var document in Model)
                                {
                                    <tr>
                                        <td>@document.Name</td>
                                        <td>@document.CompanyName</td>
                                        <td>@document.CreatorName</td>
                                        <td>@document.TemplateName</td>
                                        <td>@document.Status</td>
                                        <td>@document.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            <div class="d-flex justify-content-center">
                                                <a asp-action="DocumentDetails" asp-controller="Document" asp-route-id="@document.Id"
                                                   class="btn btn-info btn-sm me-2" title="Просмотр">
                                                    <i class="bi bi-eye"></i> Просмотр
                                                </a>
                                                <a asp-action="EditDocument" asp-controller="Document" asp-route-id="@document.Id"
                                                   class="btn btn-warning btn-sm me-2" title="Редактировать">
                                                    <i class="bi bi-pencil-square"></i> Редактировать
                                                </a>
                                                <a asp-action="DeleteDocument" asp-controller="Document" asp-route-id="@document.Id"
                                                   class="btn btn-danger btn-sm" title="Удалить"
                                                   onclick="return confirm('Вы уверены, что хотите удалить документ?');">
                                                    <i class="bi bi-trash"></i> Удалить
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-center text-muted">Документов нет.</p>
                }
            }
            else
            {
                <p class="text-center text-danger">Произошла ошибка при получении данных.</p>
            }
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f0f4f7;
    }

    .btn-info, .btn-warning, .btn-danger {
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-info i, .btn-warning i, .btn-danger i {
            margin-right: 5px;
        }

    .btn {
        background-color: #3E12E3;
        color: white;
        border: none;
        border-radius: 10px;
        padding: 12px;
        font-size: 16px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn:hover {
            background-color: #2200A4;
            transform: scale(1.05);
        }
</style>
